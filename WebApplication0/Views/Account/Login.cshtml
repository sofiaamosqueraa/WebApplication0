@model WebApplication0.Models.User

<div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold" style="color: #6A0DAD;">Iniciar Sessão</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-warning text-center fw-bold" role="alert" style="color: #856404; background-color: #fff3cd; border-color: #ffeeba;">
            @TempData["Message"]
        </div>
    }

    <form asp-action="Login" method="post" class="p-4 rounded-4 shadow-sm mx-auto" style="max-width: 500px; background: linear-gradient(90deg, #F3E9FF, #E0FAF7);">
        <div class="mb-3">
            <label class="form-label fw-bold" style="color: #4B0082;">Email</label>
            <input asp-for="Email" class="form-control border-0 rounded-pill" style="background-color: #F9F6FF;" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold" style="color: #4B0082;">Senha</label>
            <input asp-for="Password" type="password" class="form-control border-0 rounded-pill" style="background-color: #F9F6FF;" />
        </div>

        <button type="submit" class="btn w-100 rounded-pill fw-bold"
                style="background: linear-gradient(90deg, #B19CD9, #9DF2E4); color: #6A0DAD; border: none; transition: all 0.3s ease;">
            Iniciar Sessão
        </button>

        <div class="mt-3 text-danger text-center fw-semibold">
            @ViewBag.Error
        </div>
    </form>
</div>

