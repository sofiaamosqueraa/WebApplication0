@model WebApplication0.Models.User

<div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold" style="color: #6A0DAD;">Iniciar Sessão</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert text-center fw-bold rounded-4 py-3" role="alert"
             style="color: #6A0DAD; background-color: #E0FFFF; border: 1px solid #40E0D0;">
            @TempData["Message"]
        </div>
    }

    <form asp-action="Login" method="post"
          class="p-4 p-md-5 rounded-4 shadow-sm mx-auto bg-white"
          style="max-width: 500px; background: linear-gradient(145deg, #E0FFFF, #B0E0E6) !important;">

        <div class="mb-4">
            <label class="form-label fw-bold" style="color: #6A0DAD;">Email</label>
            <input asp-for="Email"
                   class="form-control form-control-lg border-0 rounded-pill shadow-sm"
                   style="background-color: rgba(255, 255, 255, 0.9); padding: 12px 20px;" />
        </div>

        <div class="mb-4">
            <label class="form-label fw-bold" style="color: #6A0DAD;">Senha</label>
            <input asp-for="Password"
                   type="password"
                   class="form-control form-control-lg border-0 rounded-pill shadow-sm"
                   style="background-color: rgba(255, 255, 255, 0.9); padding: 12px 20px;" />
        </div>

        <button type="submit"
                class="btn btn-lg w-100 rounded-pill fw-bold"
                style="background: linear-gradient(90deg, #6A0DAD, #40E0D0); color: white; border: none;">
            Iniciar Sessão
        </button>

        <div class="mt-3 text-center fw-semibold" style="color: #6A0DAD;">
            @ViewBag.Error
        </div>
    </form>
</div>

<style>
    .form-control:focus {
        border-color: #40E0D0;
        box-shadow: 0 0 0 0.25rem rgba(64, 224, 208, 0.25);
    }

    .btn:hover {
        opacity: 0.9;
        transform: translateY(-1px);
    }
</style>