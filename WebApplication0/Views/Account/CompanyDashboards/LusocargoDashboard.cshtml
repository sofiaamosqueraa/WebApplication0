@{
    ViewData["Title"] = "Dashboard da LusoCargo";
}

<div class="container-fluid min-vh-100 d-flex flex-column justify-content-center"
     style="background: linear-gradient(135deg, #DFF2E1, #B8E5C8, #A0D9B5);">
    <div class="row py-5 text-center">
        <div class="col-12">
            <h1 class="display-4 fw-bold" style="color: #2E8B57;">
                Dashboard da <span style="color: #3CB371;">LusoCargo</span>
            </h1>
            <h3 class="text-dark mb-5 fst-italic">Soluções Globais de Logística</h3>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-success">Bem-vindo à LusoCargo</h5>
                    <p class="card-text">LusoCargo é um parceiro global em logística, oferecendo soluções personalizadas para transporte, armazenagem e serviços aduaneiros.</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-success">Serviços Principais</h5>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-truck me-2 text-warning"></i>Transporte Rodoviário e Marítimo</li>
                        <li><i class="fas fa-plane me-2 text-info"></i>Transporte Aéreo</li>
                        <li><i class="fas fa-warehouse me-2 text-primary"></i>Armazenagem e Serviços Aduaneiros</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-success">Soluções Personalizadas</h5>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check-circle me-2 text-success"></i>Desembaraço aduaneiro e representação fiscal</li>
                        <li><i class="fas fa-chart-line me-2 text-warning"></i>Gestão de inventários com E-Carga</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-success">Métricas de Desempenho</h5>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-boxes me-2 text-info"></i>Transportes realizados: <strong>285,000+ em 2019</strong></li>
                        <li><i class="fas fa-users me-2 text-primary"></i>Equipe de 300 colaboradores</li>
                        <li><i class="fas fa-warehouse me-2 text-warning"></i>Armazenagem: <strong>20,000m²</strong></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-4">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-success">Setores Atendidos</h5>
                    <p class="card-text">
                        <i class="fas fa-industry me-2 text-warning"></i>Calçado, têxtil, moda, automotivo, varejo, e químico.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Botón para regresar -->
    <div class="row mt-4">
        <div class="col-12 text-center">
            <a href="@Url.Action("Dashboard", "Account")" class="btn btn-success btn-lg shadow-sm">
                <i class="fas fa-arrow-left me-2"></i>Voltar para Lista de Empresas
            </a>
        </div>
    </div>
</div>
