@{
    ViewData["Title"] = "Dashboard da LusoCargo";
}

<div class="container-fluid min-vh-100 d-flex flex-column justify-content-center"
     style="background: linear-gradient(135deg, #F0F9F1, #E1F4E3, #D2EFD5);">
    <div class="row py-5 text-center">
        <div class="col-12">
            <h1 class="display-4 fw-bold mb-3" style="color: #2D6A4F;">
                Dashboard da <span style="color: #40916C;">LusoCargo</span>
            </h1>
            <h3 class="mb-5 fst-italic" style="color: #1B4332;">Soluções Globais de Logística</h3>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100"
                 style="background: linear-gradient(145deg, #FFFFFF, #F7FBF7); border-radius: 15px;">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold mb-3" style="color: #2D6A4F;">Bem-vindo à LusoCargo</h5>
                    <p class="card-text" style="color: #1B4332;">
                        LusoCargo é um parceiro global em logística, oferecendo soluções personalizadas para transporte, armazenagem e serviços aduaneiros.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100"
                 style="background: linear-gradient(145deg, #FFFFFF, #F7FBF7); border-radius: 15px;">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold mb-3" style="color: #2D6A4F;">Serviços Principais</h5>
                    <ul class="list-unstyled" style="color: #1B4332;">
                        <li class="mb-2"><i class="fas fa-truck me-2" style="color: #40916C;"></i>Transporte Rodoviário e Marítimo</li>
                        <li class="mb-2"><i class="fas fa-plane me-2" style="color: #40916C;"></i>Transporte Aéreo</li>
                        <li><i class="fas fa-warehouse me-2" style="color: #40916C;"></i>Armazenagem e Serviços Aduaneiros</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100"
                 style="background: linear-gradient(145deg, #FFFFFF, #F7FBF7); border-radius: 15px;">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold mb-3" style="color: #2D6A4F;">Soluções Personalizadas</h5>
                    <ul class="list-unstyled" style="color: #1B4332;">
                        <li class="mb-2"><i class="fas fa-check-circle me-2" style="color: #40916C;"></i>Desembaraço aduaneiro e representação fiscal</li>
                        <li><i class="fas fa-chart-line me-2" style="color: #40916C;"></i>Gestão de inventários com E-Carga</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100"
                 style="background: linear-gradient(145deg, #FFFFFF, #F7FBF7); border-radius: 15px;">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold mb-3" style="color: #2D6A4F;">Métricas de Desempenho</h5>
                    <ul class="list-unstyled" style="color: #1B4332;">
                        <li class="mb-2"><i class="fas fa-boxes me-2" style="color: #40916C;"></i>Transportes realizados: <strong>285,000+ em 2019</strong></li>
                        <li class="mb-2"><i class="fas fa-users me-2" style="color: #40916C;"></i>Equipe de 300 colaboradores</li>
                        <li><i class="fas fa-warehouse me-2" style="color: #40916C;"></i>Armazenagem: <strong>20,000m²</strong></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-4">
        <div class="col-md-12">
            <div class="card border-0 shadow-sm"
                 style="background: linear-gradient(145deg, #FFFFFF, #F7FBF7); border-radius: 15px;">
                <div class="card-body p-4">
                    <h5 class="card-title fw-bold mb-3" style="color: #2D6A4F;">Setores Atendidos</h5>
                    <p class="card-text" style="color: #1B4332;">
                        <i class="fas fa-industry me-2" style="color: #40916C;"></i>Calçado, têxtil, moda, automotivo, varejo, e químico.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4 mb-4">
        <div class="col-12 text-center">
            <a href="@Url.Action("Dashboard", "Account")"
               class="btn btn-lg shadow-sm px-4 py-2"
               style="background: linear-gradient(45deg, #2D6A4F, #40916C);
                      color: #FFF;
                      border: none;
                      border-radius: 10px;
                      transition: all 0.3s ease;">
                <i class="fas fa-arrow-left me-2"></i>Voltar para Lista de Empresas
            </a>
        </div>
    </div>
</div>