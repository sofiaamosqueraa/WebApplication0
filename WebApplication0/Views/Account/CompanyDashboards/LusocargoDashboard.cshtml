<h2>Dashboard da Lusocargo</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Informações da Lusocargo</h5>
                <p class="card-text">Nome: @ViewBag.Company.Name</p>
                <p class="card-text">Endereço: @ViewBag.Company.Address</p>
                <!-- Adicione informações específicas da Lusocargo aqui -->
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Estatísticas da Lusocargo</h5>
                <!-- Adicione estatísticas específicas da Lusocargo aqui -->
            </div>
        </div>
    </div>
</div>

<a href="@Url.Action("Dashboard", "Account")" class="btn btn-secondary mt-3">Voltar para Lista de Empresas</a>
