@{
    ViewData["Title"] = "Dashboard Epfundao";
}

<div class="container mt-5">
    <div class="p-5 rounded-4 shadow-lg" style="background: linear-gradient(90deg, #F3E9FF, #E0FAF7);">
     
        <h2 class="text-center mb-4 fw-bold" style="color: #6A0DAD;">Bem-vindo ao Dashboard Epfundao</h2>

        <p class="text-center" style="color: #857A91; font-size: 1.1rem;">
            Olá, <strong style="color: #4B0082;">@ViewBag.UserName</strong>
            (<em style="color: #2ED9C3;">@ViewBag.UserEmail</em>)
        </p>

        <div class="d-flex justify-content-center mt-4">
            <a asp-controller="Account" asp-action="Logout" class="btn rounded-pill fw-bold px-4 py-2"
               style="background: linear-gradient(90deg, #B19CD9, #9DF2E4); color: #6A0DAD; border: none; transition: all 0.3s ease;">
                Terminar Sessão
            </a>
        </div>
    </div>
</div>

