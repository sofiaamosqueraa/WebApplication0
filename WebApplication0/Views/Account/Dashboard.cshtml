@{
    ViewData["Title"] = "Dashboard";
}

<h2>Bem-vindo, @ViewBag.UserName</h2>

<h3>Empresas Associadas</h3>
@if (ViewBag.Companies != null && ViewBag.Companies.Count > 0)
{
    <ul>
        @foreach (var company in ViewBag.Companies)
        {
            <li>@company.Name - @company.Address</li>
        }
    </ul>
}
else
{
    <p>Você não está associado a nenhuma empresa.</p>
}


