<div class="container mt-5">
    <!-- Título -->
    <h1 class="text-center mb-4 fw-bold" style="color: #6A0DAD;">Lista de Usuários</h1>

    <!-- Tabla -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle shadow-sm mt-4" style="background: linear-gradient(90deg, #F3E9FF, #E0FAF7);">
            <thead class="text-white" style="background: linear-gradient(90deg, #6A0DAD, #2ED9C3);">
                <tr>
                    <th scope="col" class="text-center">ID</th>
                    <th scope="col" class="text-center">Nome</th>
                    <th scope="col" class="text-center">Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="text-center fw-bold" style="color: #4B0082;">@user.Id</td>
                        <td class="text-center fw-bold" style="color: #4B0082;">@user.Name</td>
                        <td class="text-center" style="color: #857A91;">@user.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
