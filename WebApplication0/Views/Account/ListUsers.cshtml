@{
    var isAdmin = Context.Session.GetString("IsAdmin") == "True";
    if (!isAdmin)
    {
        <h1 class="text-center mt-5">Acesso Negado</h1>
        return;
    }
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold text-primary">Dashboard do Administrador</h1>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger rounded-pill fw-bold">Terminar Sessão.</a>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0" style="background: linear-gradient(90deg, #F3E9FF, #E0FAF7);">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold text-primary">Total de Utilizadores</h5>
                    <p class="card-text display-4 fw-bold text-dark">@ViewBag.TotalUsers</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0" style="background: linear-gradient(90deg, #F3E9FF, #E0FAF7);">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold text-primary">Administradores</h5>
                    <p class="card-text display-4 fw-bold text-dark">@ViewBag.AdminUsers</p>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle shadow-sm mt-4" style="background: linear-gradient(90deg, #F3E9FF, #E0FAF7);">
            <thead class="text-white" style="background: linear-gradient(90deg, #6A0DAD, #2ED9C3);">
                <tr>
                    <th scope="col" class="text-center">ID</th>
                    <th scope="col" class="text-center">Nome</th>
                    <th scope="col" class="text-center">Email</th>
                    <th scope="col" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="text-center fw-bold text-dark">@user.Id</td>
                        <td class="text-center fw-bold text-dark">@user.Name</td>
                        <td class="text-center text-muted">@user.Email</td>
                        <td class="text-center">
                            <form asp-action="DeleteUser" method="post" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir este usuário?');">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


